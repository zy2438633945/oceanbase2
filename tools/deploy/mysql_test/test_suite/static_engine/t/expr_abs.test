alter system flush plan cache global;

connection default;

--disable_warnings
drop table if exists t;
--enable_warnings

create table t (t1 tinyint,
                t2 smallint,
                t3 mediumint,
                t4 integer,
                t5 bigint,
                t6 tinyint unsigned,
                t7 smallint unsigned,
                t8 mediumint unsigned,
                t9 integer unsigned,
                t10 bigint unsigned,
                t11 float,
                t12 float unsigned,
                t13 double,
                t14 double unsigned,
                t15 number,
                t16 number unsigned,
                t17 datetime,
                t18 timestamp,
                t19 date,
                t20 time,
                t21 year,
                t22 varchar(255),
                t23 char(255),
                t24 tinytext,
                t25 mediumtext,
                t26 longtext,
                t27 bit,
                t28 enum('a', 'b', 'c'),
                t29 set('a', 'b', 'c'));

